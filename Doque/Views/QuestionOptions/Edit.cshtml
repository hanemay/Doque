@model Doque.Models.QuestionOptions

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>QuestionOptions</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionID, "Questions")
        </div>
        <div class="editor-field">
            @Html.DropDownList("QuestionID", String.Empty)
            @Html.ValidationMessageFor(model => model.QuestionID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OptionChoiceID, "OptionChoices")
        </div>
        <div class="editor-field">
            @Html.DropDownList("OptionChoiceID", String.Empty)
            @Html.ValidationMessageFor(model => model.OptionChoiceID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
